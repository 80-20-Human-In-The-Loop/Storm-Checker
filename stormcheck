#!/usr/bin/env python3
"""
Development convenience wrapper for stormcheck command.
This file is for development only and not included in pip installations.
When installed via pip, the entry point in pyproject.toml is used instead.
"""
import sys
from pathlib import Path

# Add scripts directory to path
scripts_dir = Path(__file__).parent / "scripts"
sys.path.insert(0, str(scripts_dir))

# Import and run main
from stormcheck import main

if __name__ == "__main__":
    main()