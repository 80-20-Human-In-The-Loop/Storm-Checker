#!/usr/bin/env python3
"""
Development convenience wrapper for stormcheck command.
This file is for development only and not included in pip installations.
When installed via pip, the entry point in pyproject.toml is used instead.
"""
import sys
from pathlib import Path

# Add project root to path
project_root = Path(__file__).parent
sys.path.insert(0, str(project_root))

# Import and run main
from storm_checker.scripts.stormcheck import main

if __name__ == "__main__":
    main()